<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

       <Space
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="match_parent" />
        <TextView android:id="@+id/topTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <!-- second line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView android:id="@+id/leftTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
        <Button android:id="@+id/centerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardCenterItemTextStyle"
            android:layout_weight="1"/>
        <TextView android:id="@+id/rightTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
    </LinearLayout>
    <!-- third line -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView android:id="@+id/bottomTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/KeyBoardItemTextStyle"
            android:layout_weight="1"/>
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>