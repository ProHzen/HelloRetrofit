<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- KeyBoard item textview's style -->
    <style name="KeyBoardItemTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">X</item>
    </style>
    <style name="KeyBoardCenterItemTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/keyboard_centeritem_selector</item>
        <item name="android:text">X</item>
    </style>
    <style name="KeyBoardCenterNumTextStyle">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">72sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/keyboard_centeritem_selector</item>
        <item name="android:text">X</item>
    </style>
    <style name="KeyBoardLetterTextStyle">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">X</item>
    </style>
</resources>
